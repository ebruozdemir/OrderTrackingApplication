
@using SiparisApp.CustomModels
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="../plugins/images/favicon.png">
    <title>Elite Admin - is a responsive admin template</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" />

    <!-- animation CSS -->
    <link href="~/Content/Css/animate.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/Css/style.css" rel="stylesheet" />

    <!-- color CSS -->
    <link href="~/Content/Css/blue.css" id="theme" rel="stylesheet" />

    <link href="~/Content/Css/jquery.toast.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <style>
        .field-validation-error {
            color: #e80c4d;
            font-weight: bold;
            font-size: 7pt;
        }

        .input-validation-error {
            border: #ff0000;
            background-color: #ffeeee;
        }

            .input-validation-error ~ .select2 .select2-selection {
                border: red;
            }
    </style>

</head>
<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="cssload-speeding-wheel"></div>
    </div>
    <section id="wrapper" class="login-register">
        <div class="login-box">
            <div class="white-box">
                <h3 class="box-title m-b-20">Giriş Sayfası</h3>
                @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                {

                    <div class="form-group ">
                        <div class="mb-3 row">
                            <div class="col-xs-12">
                                @Html.EditorFor(x => x.KULLANICI_ADI, new { htmlAttributes = new { @class = "form-control", placeholder = "Kullanıcı Adı" } })
                            </div>
                        </div>
                    </div>



                    <div class="form-group ">
                        <div class="mb-3 row">
                            <div class="col-xs-12">
                                @Html.PasswordFor(x => x.SIFRE, new { @class = "form-control", placeholder = "Şifre" })
                            </div>
                        </div>
                    </div>


                    @*<div class="form-group ">
                        <div class="mb-3 row">
                            <div class="col-md-12">
                                <div class="checkbox checkbox-primary pull-left p-t-0">
                                    <input id="checkbox-signup" type="checkbox">
                                    <label for="checkbox-signup"> Beni Hatırla </label>
                                </div>
                                <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Şifremi Unuttum</a>
                            </div>
                        </div>
                    </div>*@



                    <div class="form-group text-center m-t-20">
                        <div class="mb-3 row">
                            <div class="col-xs-12">
                                <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Giriş Yap</button>
                            </div>
                        </div>
                    </div>

                }


                <div class="jq-toast-wrap top-right">
                    <div class="jq-toast-single jq-has-icon jq-icon-error" style="text-align: left; display:@(TempData["Error"] == null  ? "none" : "block");">
                        <span class="jq-toast-loader jq-toast-loaded" style="-webkit-transition: width 3.1s ease-in;-o-transition: width 3.1s ease-in;transition: width 3.1s ease-in;background-color: #ff6849;">
                        </span><span class="close-jq-toast-single">
                            ×
                        </span><h2 class="jq-toast-heading">Mesajınız Var!</h2>@TempData["Error"]
                    </div>
                </div>



                @*<form class="form-horizontal" id="recoverform" action="index.html">
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <h3>Recover Password</h3>
                                <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input class="form-control" type="text" required="" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                            </div>
                        </div>
                    </form>*@
            </div>
        </div>
    </section>
    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Menu Plugin JavaScript -->
    <script src="~/Scripts/sidebar-nav.min.js"></script>


    <!--slimscroll JavaScript -->
    <script src="~/Scripts/jquery.slimscroll.js"></script>

    <!--Wave Effects -->
    <script src="~/Scripts/waves.js"></script>
    <script src="~/Scripts/jquery.toast.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <!-- Custom Theme JavaScript -->

    <script src="~/Scripts/custom.js"></script>
    <!--Style Switcher -->
    <script src="~/Scripts/jQuery.style.switcher.js"></script>

    <script>

        $(document).ready(function () {

            $('.close-jq-toast-single').on('click', function () {
                $(this).closest('.jq-toast-single').fadeOut();
            });

            var loader = $(".jq-toast-loader");
            var close = $(".jq-toast-single")

            var fadeOutDuration = 3000;
            // Loader'ıkaybetme
            loader.css("transition", "width " + (fadeOutDuration / 1000) + "s ease-in");
            loader.css("width", "0");

            setTimeout(function () {
                close.hide();
            }, fadeOutDuration);

        });

    </script>

</body>
</html>
