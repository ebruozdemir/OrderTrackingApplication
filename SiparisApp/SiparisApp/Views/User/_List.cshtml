
@using PagedList
@using PagedList.Mvc
@using SiparisApp.CustomModels
@model UserViewModel.AraModel

@functions {
    private string SeviyeGetir(string s)
    {
        string text = "";
        switch (s)
        {
            case "Admin":
                text = "<span class='label label-rouded label-purple'>Yetkili</span>";
                break;

            case "User":
                text = "<span class='label label-rouded label-info'>Kullanıcı</span>";
                break;
        }
        return text;
    }
}

<table class="table table-striped table-bordered table-hover" style="font-size: x-small; margin-top: 10px; width: 100%">
    <tr>
        <th>ID</th>
        <th>KULLANICI ADI</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th class="d-none d-lg-table-cell">BİRİM</th>
        <th class="d-none d-lg-table-cell">SEVİYE</th>
        <th width="135">İŞLEMLER</th>
    </tr>

    @foreach (var item in Model.SONUCLAR)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KULLANICI_ADI</td>
            <td>@item.AD</td>
            <td>@item.SOYAD</td>
            <td class="d-none d-lg-table-cell">@item.BIRIM</td>
            <td class="d-none d-lg-table-cell" style="font-size:small;">@Html.Raw(SeviyeGetir(item.SEVIYE))</td>
            <td>
                <div class="btn-group btn-group-xs">
                    <a class="btn btn-outline btn-rounded btn-warning" href="@Url.Action("Save", "User")/@item.ID"><i class="fa fa-pencil"> Düzenle</i></a> &nbsp; &nbsp;
                    <a class="btn btn-outline btn-rounded btn-danger sa-warning" onclick="Sil(@item.ID)" style="margin-left: 3px;"><i class="fa fa-trash-o"> Sil</i></a>
                </div>
            </td>
        </tr>
    }

</table>

<div style="text-align: center;">
    @Model.SONUCLAR.TotalItemCount kayıttan @Model.SONUCLAR.FirstItemOnPage - @Model.SONUCLAR.LastItemOnPage kayıt gösteriliyor.
    @Html.PagedListPager(Model.SONUCLAR, x =>
    Url.Action("Index", "User", new RouteValueDictionary
    {
        {"AD", Model.AD },
        {"SOYAD", Model.SOYAD },
        {"SAYFA_NO", x }
    }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { UpdateTargetId = "div-liste" }))
</div>