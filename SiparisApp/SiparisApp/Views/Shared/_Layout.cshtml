<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/select2.min.css" rel="stylesheet" />
    <link href="~/Content/Css/animate.css" rel="stylesheet" />
    <link href="~/Content/Css/sidebar-nav.min.css" rel="stylesheet" />
    <link href="~/Content/Css/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/Css/jquery.toast.css" rel="stylesheet" />
    <link href="~/Content/Css/style.css" rel="stylesheet" />
    <link href="~/Content/Css/default-dark.css" rel="stylesheet" />
    @RenderSection("Head", false)
</head>
            
<body class="fix-sidebar content-wrapper">
    <!-- Preloader -->
    <div class="preloader" style="display: none;">
        <div class="cssload-speeding-wheel"></div>
    </div>
    <div id="wrapper">
        <!-- Top Navigation -->
        @RenderSection("Navbar", false)
        <!-- End Top Navigation -->
        <!-- Left navbar-header -->
        @RenderSection("Sidebar", false)
        <!-- Left navbar-header end -->
        <!-- Page Content -->
        <div id="page-wrapper" style="min-height: 599px;">

            @RenderBody()
            <!-- /.container-fluid -->

        </div>

        <!-- /#page-wrapper -->
    </div>

    @RenderSection("Footer", false)

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/sidebar-nav.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.js"></script>
    <script src="~/Scripts/waves.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>
    <script src="~/Scripts/jquery.sweet-alert.custom.js"></script>
    <script src="~/Scripts/jquery.toast.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/jQuery.style.switcher.js"></script>
    <script src="~/Scripts/select2.min.js"></script>

    <script>

        $(document).ready(function () {

            $('.js-example-basic-single').select2({
                theme: "classic",
                width: "100%"
            });

            $('.close-jq-toast-single').on('click', function () {
                $(this).closest('.jq-toast-single').fadeOut();
            });

            var loader = $(".jq-toast-loader");
            var close = $(".jq-toast-single")

            var fadeOutDuration = 3000;
            // Loader'ıkaybetme
            loader.css("transition", "width " + (fadeOutDuration / 1000) + "s ease-in");
            loader.css("width", "0");

            setTimeout(function () {
                close.hide();
            }, fadeOutDuration);

        });

    </script>

    @RenderSection("Scripts", false)
</body>
</html>