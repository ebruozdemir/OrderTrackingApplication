
@using SiparisApp.CustomModels
@model SiparisViewModel.FormModel
@{
    ViewBag.Title = "Save";
}

@section Navbar{
    @{
        Html.RenderPartial("_Navbar");
    }

}

@section Sidebar{
    @{
        Html.RenderPartial("_SideBar");
    }

}

@section Footer{
    @{
        Html.RenderPartial("_Footer");
    }

}

<div class="container-fluid">

    @using (Html.BeginForm("Save", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.ID)
        @Html.HiddenFor(x => x.AKTIF)
       



        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Sipariş Kaydet</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                <div class="jq-toast-wrap top-right">
                    <div class="jq-toast-single jq-has-icon jq-icon-warning" style="text-align: left; display:@(TempData["Hata"] == null ? "none" : "block");">
                        <span class="jq-toast-loader jq-toast-loaded" style="-webkit-transition: width 3.1s ease-in;-o-transition: width 3.1s ease-in;transition: width 3.1s ease-in;background-color: #ff6849;">
                        </span><span class="close-jq-toast-single">
                            ×
                        </span><h2 class="jq-toast-heading">Mesajınız Var!</h2>@TempData["Hata"]
                    </div>
                </div>


            </div>
            </div>

        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    <div class="mb-3 row" style="margin-bottom:20px;">
                        <div class="col-md-6">
                            <label style="font-size: small; font-weight: bold;">PROJE NO</label><br />
                            @Html.EditorFor(x => x.PROJE_NO, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="col-md-6">
                            <label style="font-size: small; font-weight: bold;">SERİ NO</label><br />
                            @Html.EditorFor(x => x.SERI_NO, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                    </div>
                    <br />
                    <div class="mb-3 row" style="margin-bottom:20px;">
                        <div class="col-md-6">
                            <label style="font-size: small; font-weight: bold;">GÜÇ</label><br />
                            @Html.EditorFor(x => x.GUC, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="col-md-6">
                            <label style="font-size: small; font-weight: bold;">CARİ ADI</label><br />
                            @Html.DropDownListFor(x => x.CARI_ID, Model.CARI_LIST, new { @class = "js-example-basic-single form-control" })
                        </div>

                    </div>
                    <br />
                    <div class="mb-3 row" style="margin-bottom:20px;">
                        <div class="col-md-6">
                            <label style="font-size: small; font-weight: bold;">SİPARİŞ ADETİ</label><br />
                            @Html.EditorFor(x => x.SIPARIS_ADETI, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="col-md-6">
                            <label style="font-size: small; font-weight: bold;">SİPARİŞ TARİHİ</label><br />
                            @Html.TextBoxFor(x => x.SIPARIS_TARIHI, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                        </div>
                        <br />
                    </div>
                    <div class="mb-3 row" style="margin-bottom:20px;">
                        <div class="col-md-6">
                            <label style="font-size: small; font-weight: bold;">SATIŞÇISI</label><br />
                            @Html.DropDownListFor(x => x.KULLANICI_ID, Model.KULLANICI_LIST, new { @class = "js-example-basic-single form-control" })
                        </div>

                    </div>

                  

                    <div class="mb-3 row" style="margin-bottom:20px;">
                        <div class="col-md-12" style="text-align:right">
                            <button type="submit" class="fcbtn btn btn-success btn-outline btn-1b" id="btnKaydet"><i class="fa fa-check"> KAYDET</i></button>
                        </div>
                    </div>

                </div>
            </div>


        </div>
    }

</div>

