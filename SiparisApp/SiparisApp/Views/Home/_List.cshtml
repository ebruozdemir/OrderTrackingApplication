
@using PagedList
@using PagedList.Mvc
@using SiparisApp.CustomModels
@model SiparisViewModel.AraModel




<table class="table table-striped table-bordered table-hover" style="font-size: x-small; margin-top: 10px; width: 100%">
    <tr>
        <th>ID</th>
        <th>PROJE NO</th>
        <th>SERİ NO</th>
        <th class="d-none d-lg-table-cell">GÜÇ</th>
        <th class="d-none d-lg-table-cell">CARİ ADI</th>
        <th class="d-none d-lg-table-cell">SİPARİŞ ADETİ</th>
        <th class="d-none d-lg-table-cell">SİPARİŞ TARİHİ</th>
        <th class="d-none d-lg-table-cell">SATIŞCISI</th>
        <th width="135">İŞLEMLER</th>
    </tr>

    @foreach (var item in Model.SONUCLAR)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.PROJE_NO</td>
            <td>@item.SERI_NO</td>
            <td class="d-none d-lg-table-cell">@item.GUC</td>
            <td class="d-none d-lg-table-cell">@item.CARI</td>
            <td class="d-none d-lg-table-cell" style="text-align: center; font-size: small;"><span class="label label-rounded label-warning">@item.SIPARIS_ADETI</span></td>
            <td class="d-none d-lg-table-cell">@( item.SIPARIS_TARIHI != null ? item.SIPARIS_TARIHI.Value.ToString("dd.MM.yyyy") : "" )</td>
            <td class="d-none d-lg-table-cell">@item.KULLANICI</td>
            <td>
                <div class="btn-group btn-group-xs">
                    <a class="btn btn-outline btn-rounded btn-warning" href="@Url.Action("Save", "Home")/@item.ID"><i class="fa fa-pencil"> Düzenle</i></a> &nbsp; &nbsp;
                    <a class="btn btn-outline btn-rounded btn-danger sa-warning" onclick="Sil(@item.ID)" style="margin-left: 3px;"><i class="fa fa-trash-o"> Sil</i></a>                   
                </div>
            </td>
        </tr>
    }

</table>

<div style="text-align: center;">
    @Model.SONUCLAR.TotalItemCount kayıttan @Model.SONUCLAR.FirstItemOnPage - @Model.SONUCLAR.LastItemOnPage kayıt gösteriliyor.
    @Html.PagedListPager(Model.SONUCLAR, x =>
    Url.Action("Index", "Home", new RouteValueDictionary
    {
        {"PROJE_NO", Model.PROJE_NO },
        {"SERI_NO", Model.SERI_NO },
        {"GUC", Model.GUC },
        {"CARI_ID", Model.CARI_ID },
        {"SAYFA_NO", x }
    }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { UpdateTargetId = "div-liste" }))
</div>